{
  "name": "frostypad",
  "version": "1.0.0",
  "description": "iPad-style Launcher",
  "main": "src/main.js",
  "scripts": {
    "start": "electron src/main.js",
    "clean": "node -e \"const fs = require('fs'); fs.rmSync('dist', { recursive: true, force: true });\"",
    "build": "electron-builder",
    "dist": "npm run clean && electron-builder",
    "pack": "npm run clean && electron-builder --dir",
    "build-icon": "electron-icon-builder --input=./src/assets/icon.png --output=src/assets --flatten"
  },
  "build": {
    "appId": "com.ponz-nk.frostypad",
    "productName": "FrostyPad",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "icon": "src/assets/icons/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "icon": "src/assets/icons/icon.icns",
      "target": "dmg"
    },
    "linux": {
      "icon": "src/assets/icons/png",
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "FrostyPad",
      "artifactName": "${productName} Setup ${version}.${ext}"
    }
  },
  "keywords": [],
  "author": "ponz-NK",
  "license": "ISC",
  "dependencies": {
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-icon-builder": "^2.0.1"
  }
}
